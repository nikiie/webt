<!DOCTYPE html>
<html>
  <head>

    <!-- Google Tag Manager https://stackoverflow.com/questions/41447461/dynamic-data-with-google-tag-manager-and-turbolinks-->
    <script>
      document.addEventListener("turbolinks:load", function() {
        (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-MWW256J');
      console.log("GTM fired");
      })
    </script>
    <!-- End Google Tag Manager -->

    <title>test</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- viewport-->
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MWW256J"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div id="container">
      <h5><%= link_to "top", "/" %></h5>
      <%= yield %>
    </div>
  </body>
</html>
